{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
<div class="container">
    <h1>Posts</h1>
    <ul class="font-sans">
        {% for post in posts %}
            <li><a href="{{ path('app_post_show', {id: post.id}) }}">{{ post.title }}</a></li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
